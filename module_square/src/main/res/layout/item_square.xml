<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background"
    android:layout_margin="4dp"
    android:paddingBottom="8dp" >

    <ImageView
        android:id="@+id/iv_square_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_square_pic_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_piclist"
        app:layout_constraintEnd_toEndOf="@+id/iv_square_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_square_cover" />

    <TextView
        android:id="@+id/tv_square_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="title"
        android:maxLines="4"
        android:ellipsize="end"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/iv_square_cover"
        app:layout_constraintTop_toBottomOf="@+id/iv_square_cover" />

    <ImageView
        android:id="@+id/iv_square_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_square_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_square_title" />

    <TextView
        android:id="@+id/tv_square_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="author"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_square_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_square_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_square_avatar" />


</androidx.constraintlayout.widget.ConstraintLayout>