<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/iv_video_small_cover"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:src="@drawable/bg_video_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_video_small_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_video_time"
        android:padding="4dp"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_video_small_cover"
        app:layout_constraintEnd_toEndOf="@+id/iv_video_small_cover" />

    <TextView
        android:id="@+id/tv_video_small_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="title"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/iv_video_small_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_video_small_cover" />

    <TextView
        android:id="@+id/tv_video_small_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="desc"
        android:textSize="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_video_small_cover"
        app:layout_constraintStart_toStartOf="@+id/tv_video_small_title" />

</androidx.constraintlayout.widget.ConstraintLayout>